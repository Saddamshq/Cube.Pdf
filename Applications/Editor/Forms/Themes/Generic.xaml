<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- **********************************************************************
      Colors
    *********************************************************************** -->
    <Color x:Key="DarkBackgroundColor">#FF555555</Color>
    <Color x:Key="DarkForegroundColor">#FFE0E0E0</Color>
    <Color x:Key="DarkBorderColor">#FFB3B3B3</Color>

    <Color x:Key="DarkButtonBackgroundColor">#FF202020</Color>
    <Color x:Key="DarkButtonForegroundColor">#FFE0E0E0</Color>
    <Color x:Key="DarkButtonBorderColor">#FF303030</Color>

    <Color x:Key="LightBackgroundColor">#FFF6F6F6</Color>
    <Color x:Key="LightForegroundColor">#FF303030</Color>
    <Color x:Key="LightBorderColor">#FFE6E6E6</Color>

    <Color x:Key="LightButtonBackgroundColor">#FFE6E6E6</Color>
    <Color x:Key="LightButtonForegroundColor">#FF000000</Color>
    <Color x:Key="LightButtonBorderColor">#FFA0A0A0</Color>

    <Color x:Key="WindowBackgroundColor">#FFFFFFFF</Color>
    <Color x:Key="WindowForegroundColor">#FF303030</Color>
    <Color x:Key="WindowBorderColor">#FF303030</Color>

    <Color x:Key="TabBackgroundColor">#FF2F2F2F</Color>
    <Color x:Key="TabForegroundColor">#FFE0E0E0</Color>
    <Color x:Key="TabForegroundInactivateColor">#FF909090</Color>
    <Color x:Key="TabBorderColor">#FF303030</Color>
    <Color x:Key="TabAccentColor">#FFFFB700</Color>

    <Color x:Key="ScrollBarColor">#FF303030</Color>
    <Color x:Key="ScrollBarHoverColor">#FF272727</Color>
    <Color x:Key="ScrollBarDragColor">#FF202020</Color>

    <!-- **********************************************************************
      Brushes
    *********************************************************************** -->
    <SolidColorBrush x:Key="DarkBackgroundBrush" Color="{StaticResource DarkBackgroundColor}" />
    <SolidColorBrush x:Key="DarkForegroundBrush" Color="{StaticResource DarkForegroundColor}" />
    <SolidColorBrush x:Key="DarkBorderBrush" Color="{StaticResource DarkBorderColor}" />

    <SolidColorBrush x:Key="DarkButtonBackgroundBrush" Color="{StaticResource DarkButtonBackgroundColor}" />
    <SolidColorBrush x:Key="DarkButtonForegroundBrush" Color="{StaticResource DarkButtonForegroundColor}" />
    <SolidColorBrush x:Key="DarkButtonBorderBrush" Color="{StaticResource DarkButtonBorderColor}" />

    <SolidColorBrush x:Key="LightBackgroundBrush" Color="{StaticResource LightBackgroundColor}" />
    <SolidColorBrush x:Key="LightForegroundBrush" Color="{StaticResource LightForegroundColor}" />
    <SolidColorBrush x:Key="LightBorderBrush" Color="{StaticResource LightBorderColor}" />

    <SolidColorBrush x:Key="LightButtonBackgroundBrush" Color="{StaticResource LightButtonBackgroundColor}" />
    <SolidColorBrush x:Key="LightButtonForegroundBrush" Color="{StaticResource LightButtonForegroundColor}" />
    <SolidColorBrush x:Key="LightButtonBorderBrush" Color="{StaticResource LightButtonBorderColor}" />

    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}" />
    <SolidColorBrush x:Key="WindowForegroundBrush" Color="{StaticResource WindowForegroundColor}" />
    <SolidColorBrush x:Key="WindowBorderBrush" Color="{StaticResource WindowBorderColor}" />

    <ImageBrush
        x:Key="TabBackgroundBrush"
        ImageSource="pack://application:,,,/Assets/Background.png"
        TileMode="Tile"
        ViewportUnits="Absolute"
        Viewport="0,0,4,4" />
    <SolidColorBrush x:Key="TabForegroundBrush" Color="{StaticResource TabForegroundColor}" />
    <SolidColorBrush x:Key="TabForegroundInactivateBrush" Color="{StaticResource TabForegroundInactivateColor}" />
    <SolidColorBrush x:Key="TabBorderBrush" Color="{StaticResource TabBorderColor}" />

    <SolidColorBrush x:Key="ScrollBarBrush" Color="{StaticResource ScrollBarColor}" />
    <SolidColorBrush x:Key="ScrollBarHoverBrush" Color="{StaticResource ScrollBarHoverColor}" />
    <SolidColorBrush x:Key="ScrollBarDragBrush" Color="{StaticResource ScrollBarDragColor}" />
</ResourceDictionary>