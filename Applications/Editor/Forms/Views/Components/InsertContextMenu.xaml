<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ContextMenu x:Key="InsertContextMenu">
        <!-- ******************************************************************
          Preview
        ******************************************************************* -->
        <MenuItem
            Command="{Binding Preview.Command}"
            Header="{Binding Preview.Text}" />

        <Separator />

        <!-- ******************************************************************
          Up
        ******************************************************************* -->
        <MenuItem
            Command="{Binding Up.Command}"
            Header="{Binding Up.Text}" />

        <!-- ******************************************************************
          Down
        ******************************************************************* -->
        <MenuItem
            Command="{Binding Down.Command}"
            Header="{Binding Down.Text}" />

        <Separator />

        <!-- ******************************************************************
          Remove
        ******************************************************************* -->
        <MenuItem
            Command="{Binding Remove.Command}"
            Header="{Binding Remove.Text}" />

        <!-- ******************************************************************
          Clear
        ******************************************************************* -->
        <MenuItem
            Command="{Binding Clear.Command}"
            Header="{Binding Clear.Text}" />
    </ContextMenu>
</ResourceDictionary>